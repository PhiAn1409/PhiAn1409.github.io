<style>
	/* Avatar Container */
	.avatar-container {
		position: relative;
		display: inline-block;
		width: 12rem; /* 192px */
		height: 12rem;
		aspect-ratio: 1;
	}

	@media (min-width: 768px) {
		.avatar-container {
			width: 16rem; /* 256px */
			height: 16rem;
		}
	}

	/* Animated gradient border */
	.avatar-border {
		position: absolute;
		top: -8px;
		left: -8px;
		right: -8px;
		bottom: -8px;
		border-radius: 50%;
		background: linear-gradient(45deg, #8b5cf6, #6366f1, #ec4899, #8b5cf6);
		background-size: 300% 300%;
		animation: gradient-rotate 3s ease infinite;
		z-index: 0;
		opacity: 0.8;
	}

	/* Avatar image styling */
	.avatar-image {
		width: 100%;
		height: 100%;
		box-shadow:
			0 20px 25px -5px rgba(0, 0, 0, 0.1),
			0 10px 10px -5px rgba(0, 0, 0, 0.04),
			0 0 0 1px rgba(139, 92, 246, 0.1);
		transition: all 0.3s ease;
		background: white;
		padding: 4px;
	}

	.avatar-container:hover .avatar-image {
		transform: scale(1.05) rotate(2deg);
		box-shadow:
			0 25px 30px -5px rgba(139, 92, 246, 0.3),
			0 15px 15px -5px rgba(99, 102, 241, 0.2);
	}

	.avatar-container:hover .avatar-border {
		opacity: 1;
		animation-duration: 2s;
	}

	/* Gradient animation */
	@keyframes gradient-rotate {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	/* Pulse animation on load */
	.avatar-container {
		animation: pulse-in 0.8s ease-out;
	}

	@keyframes pulse-in {
		0% {
			opacity: 0;
			transform: scale(0.8);
		}
		50% {
			transform: scale(1.05);
		}
		100% {
			opacity: 1;
			transform: scale(1);
		}
	}
</style>
